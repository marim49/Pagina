{
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
        "no-new": "off",
        "no-alert": "off",
        "eol-last": "off",
        "no-console": "off",
        "func-names": "off",
        "no-plusplus": "off",
        "arrow-parens": "off",
        "comma-dangle": "off",
        "dot-notation": "off",
        "import/first": "off",
        "default-case": "off",
        "prefer-const": "off",
        "no-lonely-if": "off",
        "no-loop-func": "off",
        "padded-blocks": "off",
        "no-cond-assign": "off",
        "spaced-comment": "off",
        "prefer-template": "off",
        "no-param-reassign": "off",
        "no-trailing-spaces": "off",
        "no-multiple-empty-lines": "off",
        "space-before-function-paren": "off",
        "global-require": "off",
        "linebreak-style": "off",

        "semi": "warn",
        "quotes": "warn",
        "indent": ["warn", 4, { "SwitchCase": 1 }],
        "max-len": ["warn", 120],
        "no-empty": "warn",
        "arrow-spacing": "warn",
        "block-spacing": "warn",
        "no-unused-vars": "warn",
        "no-unreachable": "warn",
        "no-multi-spaces": "warn",
        "object-shorthand": "warn",
        "arrow-body-style": "warn",
        "object-curly-spacing": "warn",
        "prefer-arrow-callback": "warn",
        "brace-style": ["warn", "1tbs", {
            "allowSingleLine": true
        }],
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": true
        }]
  }
}
